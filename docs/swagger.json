{
    "swagger": "2.0",
    "info": {
        "description": "This API is for tracking your finance",
        "title": "Finance Tracker API",
        "termsOfService": "http://swagger.io/terms/",
        "contact": {
            "name": "API Support",
            "email": "fiber@swagger.io"
        },
        "license": {
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        }
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/login": {
            "post": {
                "description": "Usage of this endpoint will allow user to login and get JWT token",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Authentication"
                ],
                "summary": "Login User",
                "parameters": [
                    {
                        "description": "User login information",
                        "name": "loginRequest",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/request.LoginRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Login success",
                        "schema": {
                            "$ref": "#/definitions/auth.SuccesResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "$ref": "#/definitions/auth.FailureResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "auth.FailureResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Email or Password is wrong"
                },
                "success": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "auth.SuccesResponse": {
            "type": "object",
            "properties": {
                "message": {
                    "type": "string",
                    "example": "Login Succes"
                },
                "success": {
                    "type": "boolean",
                    "example": true
                },
                "token": {
                    "type": "string",
                    "example": "jhdfkjsbgakjhgsgkhksjgb"
                }
            }
        },
        "request.LoginRequest": {
            "type": "object",
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string",
                    "example": "conthjoh@emle.com"
                },
                "password": {
                    "type": "string",
                    "example": "conthgjoh_passrd"
                }
            }
        }
    }
}